{{ 'category-spotlight.css' | asset_url | stylesheet_tag }}

{% assign settings = section.settings %}
{% assign selectedCollection = collections[settings.collection] %}

<section class="collection-spotlight">
  <section class="collection-spotlight__cta">
    <h1>{{ settings.heading }}</h1>
    <p>{{ settings.collectionDescription }}</p>
    {% if settings.buttonLink == '' %}
      <a class="" href="{{ selectedCollection.url }}">shop collection</a>
    {% else %}
      <a class="" href="{{ settings.buttonLink }}">shop collection</a>
    {% endif %}
  </section>

  <div>
    {% assign products = selectedCollection.products %}

    {% assign limit = 2 %}
    {% assign count = 0 %}
    {% for product in products %}
      {% if count < limit %}
        <img
          class="collection-spotlight__picture media-{{count | plus: 1 }}"
          height="auto"
          width="350px"
          loading="eager"
          src="{{product.featured_image | image_url}}"
          alt="{{product.featured_image.alt}}"
        >
        {% assign count = count | plus: 1 %}
      {% endif %}
    {% endfor %}
  </div>

  <script>
    console.log('{{settings.buttonLink}}');
  </script>
</section>

{% schema %}
{
  "name": "collection-spotlight",
  "tag": "article",
  "presets": [
    {
      "name": "cotegory spotlight"
    }
  ],
  "settings": [
    {
      "id": "collection",
      "label": "Collection",
      "info": "Select a Collection",
      "type": "collection"
    },
    {
      "id": "heading",
      "label": "Heading",
      "type": "text",
      "default": "Your collection"
    },
    {
      "id": "collectionDescription",
      "label": "Text",
      "info": "Select a Collection",
      "type": "textarea",
      "default": "use this text to highlight your selected collection"
    },
    {
      "id": "buttonLink",
      "label": "Button link",
      "type": "text"
    }
  ]
}
{% endschema %}
